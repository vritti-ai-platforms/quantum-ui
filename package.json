{
  "name": "@vritti/quantum-ui",
  "description": "A modern, TypeScript-first React component library built on Radix UI primitives and styled with Tailwind CSS v4. Features a powerful Field system and smart Form component with react-hook-form integration. Fully typed, accessible, and tree-shakeable components including TextField, TextArea, PhoneField, PasswordField, OTPField, Checkbox, Form, and more.",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "version": "0.2.5",
  "type": "module",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vritti-hub/quantum-ui.git"
  },
  "homepage": "https://vritti-hub.github.io/quantum-ui",
  "bugs": {
    "url": "https://github.com/vritti-hub/quantum-ui/issues"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "tailwind",
    "tailwindcss",
    "radix-ui",
    "typescript",
    "accessible",
    "tree-shakeable",
    "component-library"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/index.js"
    },
    "./Button": {
      "types": "./dist/lib/components/Button/index.d.ts",
      "import": "./dist/components/Button.js"
    },
    "./Card": {
      "types": "./dist/lib/components/Card/index.d.ts",
      "import": "./dist/components/Card.js"
    },
    "./TextField": {
      "types": "./dist/lib/components/TextField/index.d.ts",
      "import": "./dist/components/TextField.js"
    },
    "./Typography": {
      "types": "./dist/lib/components/Typography/index.d.ts",
      "import": "./dist/components/Typography.js"
    },
    "./ThemeToggle": {
      "types": "./dist/lib/components/ThemeToggle/index.d.ts",
      "import": "./dist/components/ThemeToggle.js"
    },
    "./Checkbox": {
      "types": "./dist/lib/components/Checkbox/index.d.ts",
      "import": "./dist/components/Checkbox.js"
    },
    "./PasswordField": {
      "types": "./dist/lib/components/PasswordField/index.d.ts",
      "import": "./dist/components/PasswordField.js"
    },
    "./PhoneField": {
      "types": "./dist/lib/components/PhoneField/index.d.ts",
      "import": "./dist/components/PhoneField.js"
    },
    "./Progress": {
      "types": "./dist/lib/components/Progress/index.d.ts",
      "import": "./dist/components/Progress.js"
    },
    "./OTPField": {
      "types": "./dist/lib/components/OTPField/index.d.ts",
      "import": "./dist/components/OTPField.js"
    },
    "./TextArea": {
      "types": "./dist/lib/components/TextArea/index.d.ts",
      "import": "./dist/components/TextArea.js"
    },
    "./Form": {
      "types": "./dist/lib/components/Form/index.d.ts",
      "import": "./dist/components/Form.js"
    },
    "./DatePicker": {
      "types": "./dist/lib/components/DatePicker/index.d.ts",
      "import": "./dist/components/DatePicker.js"
    },
    "./Skeleton": {
      "types": "./dist/lib/components/Skeleton/index.d.ts",
      "import": "./dist/components/Skeleton.js"
    },
    "./Spinner": {
      "types": "./dist/lib/components/Spinner/index.d.ts",
      "import": "./dist/components/Spinner.js"
    },
    "./Field": {
      "types": "./dist/lib/components/Field/index.d.ts",
      "import": "./dist/shadcn/shadcnField.js"
    },
    "./axios": {
      "types": "./dist/lib/utils/axios.d.ts",
      "import": "./dist/utils/axios.js"
    },
    "./index.css": "./dist/assets/quantum-ui.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:js": "vite build",
    "build:types": "tsc --project tsconfig.lib.json --emitDeclarationOnly",
    "build:watch": "npm run build:types && vite build --watch",
    "check": "biome check --write .",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build-storybook:github": "NODE_ENV=production storybook build"
  },
  "peerDependencies": {
    "@tanstack/react-query": "^5.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-router-dom": "^6.0.0 || ^7.0.0"
  },
  "peerDependenciesMeta": {
    "@tanstack/react-query": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@storybook/addon-docs": "10.1.11",
    "@storybook/addon-themes": "^10.1.11",
    "@storybook/react-vite": "10.1.11",
    "@tailwindcss/postcss": "^4.1.13",
    "@tanstack/react-query": "^5.90.17",
    "@types/node": "^22.18.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "ajv": "^8.17.1",
    "glob": "^11.0.2",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-router-dom": "^7.9.4",
    "storybook": "10.1.11",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.3.8",
    "typescript": "~5.8.3",
    "vite": "^7.1.6",
    "vite-plugin-dts": "^4.5.4"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.1.15",
    "@tailwindcss/vite": "^4.1.17",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.544.0",
    "react-day-picker": "^9.11.3",
    "react-hook-form": "^7.71.1",
    "react-phone-number-input": "^3.4.12",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  }
}
